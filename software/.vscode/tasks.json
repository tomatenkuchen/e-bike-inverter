{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "config debug",
			"command": "conan",
			"args": [
				"build",
				".",
				"-pr=stm32g4",
				"-s",
				"build_type=Debug",
				"-b=missing"
			],
			"problemMatcher": [
				"$gcc"
			],
			"detail": "conan debug build command",
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"type": "cppbuild",
			"label": "config release",
			"command": "conan",
			"args": [
				"build",
				".",
				"-pr=stm32g4",
				"-s",
				"build_type=MinSizeRel",
				"-b=missing"
			],
			"problemMatcher": [
				"$gcc"
			],
			"detail": "conan debug build command",
			"group": {
				"kind": "build",
				"isDefault": false
			},
		},
		{
			"type": "cppbuild",
			"label": "build debug",
			"command": "cmake",
			"args": [
				"--build",
				"build/Debug"
			],
			"problemMatcher": [
				"$gcc"
			],
			"detail": "conan debug build command",
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"type": "cppbuild",
			"label": "flash-debug",
			"command": "STM32_Programmer_CLI",
			"args": [
				"-c",
				"port=SWD",
				"-w",
				"${workspaceFolder}/build/Debug/src/batterycharger.hex"
			],
			"detail": "flash binary to controller",
			"group": {
				"kind": "build",
				"isDefault": false,
			}
		},
		{
			"type": "cppbuild",
			"label": "gdbserver",
			"command": "ST-LINK_gdbserver",
			"args": [
				"-cp",
				"/opt/st/stm32cubeide_1.19.0/plugins/com.st.stm32cube.ide.mcu.externaltools.cubeprogrammer.linux64_2.2.200.202503041107/tools/bin/",
				"-d",
				"-v",
			],
			"detail": "open gdb server for debugging",
			"group": {
				"kind": "build",
				"isDefault": false,
			}
		},
	]
}